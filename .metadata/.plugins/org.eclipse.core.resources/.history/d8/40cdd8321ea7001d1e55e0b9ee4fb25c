<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<context:property-placeholder
		location="/database.properties, /sql.properties" />

	<bean name="dataSource"
		class="com.mysql.cj.jdbc.MysqlConnectionPoolDataSource">
		<!--name must same with MysqlConnectionPoolDataSource -->
		<property name="url" value="${db.url}"></property>
		<property name="user" value="${db.user}"></property>
		<property name="password" value="${db.password}"></property>
	</bean>
	<bean class="org.springframework.jdbc.core.JdbcTemplate">
		<constructor-arg ref="dataSource"></constructor-arg>

		<constructor-arg name="lazyInit" value="true"></constructor-arg>
	</bean>
	<context:component-scan
		base-package="com.jdc.demo"></context:component-scan>
</beans>
